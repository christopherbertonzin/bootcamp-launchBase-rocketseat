{% extends 'layout.njk' %}

{% block content %}
    <div class="card">
        <section class="image" style="background: url({{ instructor.avatar_url }}) center center;
        background-size: cover;" >
        </section>
        
        <section class="details">
            <form action="/members?_method=PUT" method="post">
                <h3>Detalhes</h3>

                {% include 'members/fields.njk'%}

                <input 
                    type="hidden" 
                    name="id"
                    value={{ member.id }}>
            </form>

            <form id="formDelete" action="/members/?_method=DELETE" method="post">
                <input 
                    type="hidden" 
                    name="id"
                    value={{ member.id }}>
                <button class="btn btn--deletar" type="submit">Deletar</button>
            </form>
        </section>
    </div>

    {% include 'confirmation.njk' %}

{% endblock content %} 