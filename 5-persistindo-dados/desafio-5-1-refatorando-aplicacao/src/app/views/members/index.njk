{% extends 'layout.njk' %}

{% block content %}
    <div class=" card card--list table--container">
        <a class="btn--novo" ng-click="bnt1" href="/members/create">Novo</a>
        <table>
            <thead>
                <tr>
                    <th>Intructor</th>
                    <th>Email</th>
                    <th>Peso</th>
                    <th>Altura</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
            {% for member in members%}
                <tr>
                    <td><span class="avatar--list" style="background: url({{ member.avatar_url}}) center center"></span>{{ member.name }}</td>
                    <td>{{ member.email }}</td>
                    <td>{{ member.weight }}</td>
                    <td>{{ member.height }}</td>
                    <td>
                        <a class="btn btn--ver" href="members/{{ member.id }}">Ver</a></td>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}