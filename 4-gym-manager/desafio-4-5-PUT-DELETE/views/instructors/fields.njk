<div class="item">
    <div>Avatar</div>
    <input 
        type="url" 
        name="avatar_url" 
        placeholder="URL"
        value="{{ instructor.avatar_url }}">
</div>

<div class="item">
    <div>Instrutor</div>
    <input
        type="name" 
        name="name" 
        placeholder="Nome completo" 
        value="{{ instructor.name }}">
</div>

<div class="item">
    <div>Data de Nascimento</div>
    <input 
        type="date" 
        name="birth"
        value="{{ instructor.birth }}">
</div>

<div class="item">
    <div>Sexo</div>
    <div>
        <span>
            <input 
                type="radio" 
                name="gender" 
                value="M" 
                {% if instructor.gender == 'M' %}
                checked
                {% endif %}>
                Masculino
        </span>
        <span>
            <input 
                type="radio" 
                name="gender" 
                value="F" 
                {% if instructor.gender == 'F' %}
                checked
                {% endif %}>
                Feminino
        </span>
    </div>
</div>

<div class="item">
    <div>Área de atuação</div>
    <input 
        type="text" 
        placeholder="Separe por vígulas" 
        name="services"
        value="{{ instructor.services }}">
</div>

<button type="submit">Salvar</button>