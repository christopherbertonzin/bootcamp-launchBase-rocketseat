{% extends 'layout.njk' %}

{% block content %}
    <form  class="card" action="/instructors" method="post">
        <section class="image"></section>
        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Avatar</div>
                <input type="url" name="avatar_url" placeholder="URL">
            </div>
            
            <div class="item">
                <div>Instrutor</div>
                <input type="name" name="name" placeholder="Nome completo">
            </div>

            <div class="item">
                <div>Data de Nascimento</div>
                <input type="date" name="birth">
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>
                    <span><input type="radio" name="gender" value="M" checked>Masculino</span>
                    <span><input type="radio" name="gender" value="F">Feminino</span>
                </div>
            </div>

            <div class="item">
                <div>Área de atuação</div>
                <input type="text" placeholder="Separe por vígulas" name="services">
            </div>

            <button type="submit">Salvar</button>
        </section>
    </form>
{% endblock content %}